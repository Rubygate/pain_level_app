{% block body %}
<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mb-5">
{#        <h2 class="heading-section">Pain Monitor</h2>#}
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">
          <div style="background: #3b5998;" class="icon d-flex align-items-center justify-content-center">
            <span  class="fa fa-user-o"></span>
          </div>
          <h3 style="color: #3b5998" class="text-center mb-4">Doctor Login</h3>
          {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}
          <form action="{{ path('app_login') }}" method="post" class="login-form">
            <div class="form-group">
              <input type="text" class="form-control rounded-left" placeholder="Email"  id="username" name="_username" value="{{ last_username }}" required>
            </div>
            <div class="form-group d-flex">
              <input type="password" class="form-control rounded-left" placeholder="Password"  id="password" name="_password" required>
            </div>
            <div class="form-group d-md-flex">
            </div>
            <div class="form-group">
              <button type="submit" style="background-color: #3b5998; color: white"  class="btn rounded submit p-3 px-5">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

