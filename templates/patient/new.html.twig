{% extends 'base.html.twig' %}
  {% block content %}
    <div class="row page-titles">
      <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">Patient Details</h4>
      </div>
      <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
      </div>

      <div class="col-lg-6">
        <form  method="post" action="{{ path('app_patient_new') }}">
        <div class="card oh">
          <div class="card-body">
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.firstName) }}
              </div>  <div class="col">
                {{ form_row(form.lastName) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.contactPhone) }}
              </div>  <div class="col">
                {{ form_row(form.email) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.prescribedMedication) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.monitoringStartDate) }}
              </div>
              <div class="col">
                {{ form_row(form.monitoringEndDate) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="mb-3">
                {{ form_row(form.painBaseline) }}
              </div>
              <div class="mb-3">
              {{ form_row(form.reminderInterval) }}
              </div>
              <div class="mb-3">
              {{ form_row(form.intervalType) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
             <button type="submit" class="btn btn-facebook">Submit</button>
            </div>
          </div>


          </div>
          {{ form_row(form._token) }}
          {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>

  {% endblock %}