{% extends 'base.html.twig' %}
  {% block content %}
    <div class="row">
      <div class="col-lg-3">
      </div>
      <div class="col-lg-6">
        <form  method="post" action="{{ path('app_patient_new') }}">
        <div class="card oh">
          <div class="card-body">
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.firstName) }}
              </div>  <div class="col">
                {{ form_row(form.lastName) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.contactPhone) }}
              </div>  <div class="col">
                {{ form_row(form.email) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.prescribedMedication) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="col">
                {{ form_row(form.monitoringStartDate) }}
              </div>
              <div class="col">
                {{ form_row(form.monitoringEndDate) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
              <div class="mb-3">
                {{ form_row(form.painBaseline) }}
              </div>
              <div class="mb-3">
              {{ form_row(form.reminderInterval) }}
              </div>
              <div class="mb-3">
              {{ form_row(form.intervalType) }}
              </div>
            </div>
            <div class="d-flex m-b-30 align-items-center no-block">
             <button type="submit" class="btn btn-facebook">Submit</button>
            </div>
          </div>


          </div>
          {{ form_row(form._token) }}
          {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>

  {% endblock %}